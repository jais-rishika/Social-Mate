<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vishal.socialmate.Profile_Information_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Information"
            android:textSize="@dimen/_25ssp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/light_blue"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_img_view"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            app:civ_border_color="#FF000000"/>

        <EditText
            android:id="@+id/pro_inf_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:padding="@dimen/_10sdp"
            android:inputType="text"
            android:drawablePadding="@dimen/_5sdp"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_user"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/et_bg_signup"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColorHint="@color/signup_hint_color"/>

        <EditText
            android:id="@+id/pro_inf_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Headline"
            android:inputType="text"
            android:textColorHint="@color/signup_hint_color"
            android:background="@drawable/et_bg_signup"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            android:maxLines="1"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableStart="@drawable/ic_info"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"/>


        <EditText
            android:id="@+id/pro_inf_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/et_bg_signup"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:hint="Enter Your City"
            android:padding="@dimen/_10sdp"
            android:inputType="text"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="@dimen/_5sdp"
            android:textColorHint="@color/signup_hint_color"/>



        <EditText
            android:id="@+id/pro_inf_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/et_bg_signup"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:hint="Enter Profession"
            android:padding="@dimen/_10sdp"
            android:inputType="text"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_work"
            android:drawablePadding="@dimen/_5sdp"
            android:textColorHint="@color/signup_hint_color"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <LinearLayout
                android:id="@+id/ll_male"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/malefemalefocus"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/ic_male"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Male"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="Select"
                    android:gravity="center"
                    android:textSize="@dimen/_22ssp"
                    android:fontFamily="@font/akaya_telivigala"/>

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="Gender"
                    android:gravity="center"
                    android:textSize="@dimen/_25ssp"
                    android:fontFamily="@font/akaya_telivigala"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_female"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/malefeamlenotfocus"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/ic_female"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/arbutus_slab"
                    android:text="Female"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pro_inf_update_btn"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center"
            android:text="Update"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg_signup"
            android:textSize="@dimen/_15ssp"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <ProgressBar
            android:id="@+id/pro_inf_progressbar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="invisible"/>

    </LinearLayout>



</ScrollView>
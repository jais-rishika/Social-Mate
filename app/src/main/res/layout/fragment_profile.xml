<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My profile"
            android:textSize="@dimen/_30ssp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/light_blue"
            android:fontFamily="@font/akaya_telivigala"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cir_img_view"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/sample_img"
                app:civ_border_width="2dp"
                android:clickable="true"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_gravity="center"
                app:civ_border_color="#FF000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vishal Chauhan"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_20ssp"/>

                <TextView
                    android:text="Student ðŸ™ƒ"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/signup_hint_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/phone_call"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/chat"
                        android:layout_marginStart="@dimen/_20sdp"/>

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/video_camera"
                        android:layout_marginStart="@dimen/_20sdp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="@dimen/_5sdp"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Followers"
                           android:gravity="center"
                           android:textColor="@color/black"
                           android:fontFamily="monospace"/>

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="1000"
                           android:gravity="center"
                           android:textColor="@color/black"
                           android:fontFamily="monospace"/>
                   </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Friends"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="monospace"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="650"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="monospace"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Posts"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="monospace"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="monospace"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/headline_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/pink"
            android:gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="Android Developer ðŸ˜€ | Programmer"
            android:layout_marginTop="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal">

            <View
                android:id="@+id/start_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_blue"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Recent Friends"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/arbutus_slab"/>

        <HorizontalScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_1"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_2"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_3"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_4"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_5"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_6"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_7"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_8"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_9"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/sample_friend_10"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_1sdp"
                    android:clickable="true"
                    app:civ_border_color="@color/light_bottom_pink"/>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Posts"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/arbutus_slab"
            android:textSize="@dimen/_15ssp"
            android:gravity="center"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/profile_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:tabTextColor="@color/black"
            app:tabIndicatorColor="@color/blue"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_10sdp"/>
        
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/profileViewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_95sdp"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/sample_post_image1"/>

            <ImageView
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post_image2"/>

            <ImageView
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post_image3"/>

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_95sdp"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/sample_post_image4"/>

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post_image5"/>

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_post_image6"/>

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_95sdp"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/sample_post_image7"/>

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_image_post8"/>

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_image_post9"/>

        </GridLayout>

    </LinearLayout>

</ScrollView>